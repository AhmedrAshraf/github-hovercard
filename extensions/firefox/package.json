{
  "title": "GitHub Hovercard",
  "name": "github-hovercard",
  "version": "1.2.4",
  "description": "Neat hovercards for GitHub.",
  "main": "index.js",
  "author": "Justineo",
  "homepage": "https://justineo.github.io/github-hovercard/",
  "permissions": {
    "multiprocess": true
  },
  "preferences": [
    {
      "name": "domains",
      "title": "Applicable Domains",
      "type": "string",
      "description": "Comma-separated domain list. (github.com is always included)"
    },
    {
      "name": "delay",
      "title": "Delay",
      "type": "integer",
      "description": "Delay milliseconds before hovercards pop up.",
      "value": 200
    },
    {
      "name": "readme",
      "title": "Readme",
      "type": "bool",
      "description": "Show readme content for repos.",
      "value": true
    },
    {
      "name": "disableProjects",
      "title": "Disable Projects",
      "type": "bool",
      "description": "Disable hovercards on projects.",
      "value": false
    },
    {
      "name": "showSelf",
      "title": "Hovercards for myself",
      "type": "bool",
      "description": "Show user hovercards for myself.",
      "value": false
    }
  ],
  "engines": {
    "firefox": ">=38.0a1",
    "fennec": ">=38.0a1"
  },
  "license": "MIT"
}